<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<div class="search_form_area m-3">

  <%= form_with(url: tasks_path, method: :get, scope: :search,local: true) do |form| %>
    <div class="form-group">
        <%= form.label :status %>
        <%= form.select :status, options_for_select(['Non_démarré', 'Démarré', 'Terminé']), include_blank: true  %>
        <%= form.label :title %>
        <%= form.text_field :title , id: "title" %>
        <%= form.label :label_id, "label" %>
        <%= form.select :label_id, @labels, { include_blank: true } %>
    </div>
    <%= form.submit "Rechercher", id: "search_task", class: "btn btn-dark"  %>
  <% end %>

</div>

<table class="table">
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at)%></th>
      <th> <%= link_to "expiration date", sort_deadline_on: true %></th>
      <th><%= link_to "priority",sort_priority: true %></th>
      <th> status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime('%Y-%m-%d %H:%M')   %></td>
        <td><%= task.deadline_on%></td>
        <td><%= task.priority%></td>
        <td><%= task.status%></td>
        <td><%= link_to t('common.show'), task , class: "show-task btn btn-primary" %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task), class: "edit-task btn btn-primary"   %></td>
        <td><%= link_to t('common.destroy'), task, method: :delete, data: { confirm: 'Etes-vous sur ?' } , class: "destroy-task btn btn-danger"  %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<%= paginate @tasks %>

<br>

<%= link_to t('.new_task') , new_task_path %>
